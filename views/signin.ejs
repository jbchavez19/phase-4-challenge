<%- include('header') -%>
  <div class="signin">
    <h2>Sign In</h2>

    <% if (error) { %>
      <h3><%= error %></h3>
    <% } %>

    <form action="/signin" method="post">
      Email<br>
      <input type="text" placeholder="Email" name="email"><br><br>
      Password<br>
      <input type="password" placeholder="Password" name="password"><br><br>
      <input type="submit" value="Sign In">
    </form>
  </div>
<%- include('footer') -%>
